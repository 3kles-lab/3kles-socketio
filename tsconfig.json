{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"target": "es2022",
		"outDir": "dist",
		"lib": [
			"dom",
			"es5",
			"es6"
		],
		"noImplicitAny": false,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist",
		"node_modules",
		"**/*.spec.ts"
	]
}